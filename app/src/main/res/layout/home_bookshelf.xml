<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/shujiabei"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/linearLayout_mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bookshelf_bg"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="@drawable/bookshelf_header_bg_shelf">

                    <ImageButton
                        android:id="@+id/imgBtn_openClassifyAct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dip"
                        android:background="#00000000"
                        android:src="@drawable/menu1" />

                    <TextView
                        android:id="@+id/tv_classifyName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/tab_txt_checked"
                        android:textSize="20dip" />

                    <ImageButton
                        android:id="@+id/imgBtn_openFileSAct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dip"
                        android:background="#00000000"
                        android:src="@drawable/more" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/shujiabei">

                    <GridView
                        android:id="@+id/gridView_book"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:numColumns="3"
                        android:verticalSpacing="33dp"></GridView>
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>


    </LinearLayout>

</RelativeLayout>